<% provide(:title, @user.name) %>
  <h1><%= @user.name %></h1>
  <h2><%= @user.email %></h2>
  <h3><%= @user.phoneNo %></h3>
  <section class="stats">
      <%= render 'shared/stats' %>
    </section>
<div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.tweets.any? %>
      <h3>Tweets</h3>
      <ol class="tweets">
        <%= render @tweets %>
      </ol>
      <%= will_paginate @tweets %>
    <% end %>
  </div>   