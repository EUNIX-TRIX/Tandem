<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | HI THERE</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render'layouts/shim' %>
  </head>

  <body>
    <%= render 'layouts/header'%>
    <div class="container">
      <% flash.each do |m_type, m| %>
      <div class = "alert alert-<%= m_type %>"></div> <%= m %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
